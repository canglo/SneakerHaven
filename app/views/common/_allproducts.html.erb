<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= image_tag allproducts.image, :class => "productImage" %>
    <div class="caption">
      <h3><%= allproducts.name %></h3>
      <p><strong>Price: $ </strong><%= allproducts.price %></p>
      <p><strong>Category: </strong><%= allproducts.category.name %></p>
      <!-- <p><a href="#" class="btn btn-primary" role="button">Button</a>
      <a href="#" class="btn btn-default" role="button">Button</a></p> -->
      <p>
        <%= link_to 'View', product_path(allproducts), :class => "btn btn-default" %>
        <button type="button" class="btn btn-primary">
          <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
          Add
        </button>
      </p>
    </div>
  </div>
</div>
